generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  users_id  String   @id @default(uuid())
  firstname String?
  lastname  String?
  username  String   @unique
  password  String
  folders   Folder[]
  files     File[]
}

model Folder {
  folders_id      String   @id @default(uuid())
  folder_name     String
  createdAt       DateTime @updatedAt
  files           File[]
  user            Users    @relation(fields: [user_id], references: [users_id])
  user_id         String
  parentId        String?
  parent          Folder?  @relation("Subfolder", fields: [parentId], references: [folders_id])
  children_folder Folder[] @relation("Subfolder")
}

model File {
  files_id   String   @id @default(uuid())
  filename   String
  size       Int
  uploadTime DateTime @updatedAt
  folders    Folder[]
  user       Users    @relation(fields: [user_id], references: [users_id])
  user_id    String
}

model Session {
  id        String   @id
  sid       String   @unique
  data      String
  expiresAt DateTime
}
